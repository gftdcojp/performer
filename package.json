{
  "name": "performer",
  "version": "0.1.0",
  "description": "Web Framework CLI with EffectTS v3 + XState Actor + Web Components + WASM",
  "main": "dist/index.js",
  "bin": {
    "performer": "./dist/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:cli": "tsc --project tsconfig.cli.json",
    "dev": "vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src",
    "cli": "tsx src/cli/index.ts",
    "generate": "tsx src/cli/generate.ts"
  },
  "keywords": [
    "web-framework",
    "effect-ts",
    "xstate",
    "web-components",
    "wasm",
    "actor-model",
    "cli"
  ],
  "author": "com-junkawasaki",
  "license": "MIT",
  "dependencies": {
    "effect": "^3.0.0",
    "xstate": "^5.0.0",
    "@microsoft/fast-element": "^2.0.0-beta.26",
    "@microsoft/fast-foundation": "^2.50.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "tsx": "^4.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "prettier": "^3.0.0",
    "@types/web": "^0.0.134"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/com-junkawasaki/performer"
  },
  "bugs": {
    "url": "https://github.com/com-junkawasaki/performer/issues"
  },
  "homepage": "https://github.com/com-junkawasaki/performer#readme"
}
