    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.20",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@pkg/actions": "workspace:*",
    "@pkg/actor": "workspace:*",
    "@pkg/cli": "workspace:*",
    "@pkg/contracts": "workspace:*",
    "@pkg/data": "workspace:*",
    "@pkg/dev-server": "workspace:*",
    "@pkg/error-handling": "workspace:*",
    "@pkg/observability": "workspace:*",
    "@pkg/process": "workspace:*",
