{
  "name": "demo-app",
  "version": "1.0.0",
  "description": "Demo app: order->approval->payment BPMN process",
  "private": true,
  "scripts": {
    "dev": "vite --port 8100",
    "build": "node scripts/check-structure.js && vite build",
    "preview": "vite preview",
