# Development overrides for docker-compose.yml
services:
  demo-app:
    # Mount source code for hot reloading in development
    volumes:
      - .:/app
      - /app/node_modules
    environment:
      - NODE_ENV=development
    command: ["npm", "run", "dev"]
    ports:
      - "8100:8100"
      - "24678:24678"  # Vite dev server port

  neo4j:
    ports:
      - "7474:7474"  # Neo4j Browser
      - "7687:7687"  # Bolt protocol
