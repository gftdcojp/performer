{
	"name": "@gftdcojp/performer-cli",
	"version": "1.0.0",
	"description": "Next.js-style CLI with create, dev, build commands for Performer framework",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"bin": {
		"performer": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "biome check .",
		"format": "biome format --write .",
		"test": "vitest run",
		"clean": "rm -rf dist"
	},
	"keywords": ["cli", "tooling"],
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/node": "^20.14.0",
		"tsup": "^8.0.0",
		"typescript": "^5.5.0",
		"vitest": "^1.6.0"
	},
	"dependencies": {
		"commander": "^12.1.0",
		"chalk": "^5.3.0"
	},
	"optionalDependencies": {
		"vite": "^5.0.0"
	}
}
