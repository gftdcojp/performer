{
	"name": "@gftdcojp/performer-router",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"version": "1.0.0",
	"description": "Next.js style file-based router with SSR pipeline",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"build:types": "tsc --emitDeclarationOnly",
		"dev": "tsup --watch",
		"lint": "biome check .",
		"format": "biome format --write .",
		"test": "vitest run",
		"clean": "rm -rf dist"
	},
	"keywords": ["router", "ssr", "file-based"],
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/node": "^20.14.0",
		"@types/react": "^18.3.0",
		"tsup": "^8.0.0",
		"typescript": "^5.5.0",
		"vitest": "^1.6.0"
	},
	"dependencies": {
		"vite": "^5.3.0"
	}
}
