# Performer Database Configuration
# Database mode: 'local' (libSQL), 'http' (ActorDB server), 'websocket' (ActorDB WebSocket)
export PERFORMER_DB_MODE=local

# Local libSQL configuration (for PERFORMER_DB_MODE=local)
export PERFORMER_DB_URL=file:performer.db
export PERFORMER_DB_AUTH_TOKEN=

# ActorDB server configuration (for PERFORMER_DB_MODE=http/websocket)
export PERFORMER_DB_HOST=localhost
export PERFORMER_DB_PORT=9090
export PERFORMER_DB_SECURE=false
export PERFORMER_DB_TOKEN=
export PERFORMER_DB_TIMEOUT=5000
